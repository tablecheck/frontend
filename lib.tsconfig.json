{
  "buildOptions": {
    "incremental": true
  },
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "node16",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "target": "es2020"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
