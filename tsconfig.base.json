{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "paths": {
      "@tablecheck/eslint-plugin": ["packages/eslint-plugin/src/index.ts"],
      "@tablecheck/frontend-audit": ["packages/audit/src/index.ts"],
      "@tablecheck/frontend-config": ["packages/config/src/index.ts"],
      "@tablecheck/nx": ["packages/nx/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
